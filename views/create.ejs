<%- include('partials/header') %>
<%- include('partials/navbar', { user: user }) %>

<div class="container w-50 justify-center">
    <h1 class="mt-3">Create New Post</h1>
    <form action="/create" method="POST">
        <div class="form-group">
            <label for="title">Title</label>
            <input class="form-control" type="text" id="title" name="title" required />
        </div>
        <div class="form-group">
            <label for="author">Author</label>
            <input class="form-control" type="text" id="author" name="author" value="<%= user.username %>" readonly="true" required />
        </div>
        <div class="form-group">
            <label for="topic">Topic</label>
            <input class="form-control" type="text" id="topic" name="topic" required />
        </div>
        <div class="form-group">
            <label for="content">Content</label>
            <input class="form-control" type="text" id="content" name="content" required />
        </div>
        <button class="btn btn-md mt-3" style="background-color: #5e0009; color: white; margin-right: 5px;" type="submit">Create Post</button>
    </form>
</div>

<%- include('partials/footer') %>