<%- include('../partials/header') %>
<%- include('../partials/navbar', { user: user }) %>

<div class="container w-50 justify-center">
    <h1 class="mt-3">Update Post</h1>
    <form action="/<%= user.username %>/<%= post.post_id %>/update?_method=PUT" method="POST">
        <div class="form-group">
            <label for="title">Title</label>
            <input class="form-control" type="text" id="title" name="title" value="<%= post.title %>" required />
        </div>
        <div class="form-group">
            <label for="topic">Topic</label>
            <input class="form-control" type="text" id="topic" name="topic" value="<%= post.topic %>" required />
        </div>
        <div class="form-group">
            <label for="content">Content</label>
            <input class="form-control" type="text" id="content" name="content" value="<%= post.content %>" required />
        </div>
        <button class="btn btn-md mt-3" style="background-color: #5e0009; color: white; margin-right: 5px;" type="submit">Update Post</button>
    </form>
</div>

<%- include('../partials/footer') %>