<%- include('../partials/header') %>
<%- include('../partials/navbar', { user: user }) %>

<div class="container w-50 justify-center">
    <h1>Update Post</h1>
    <form action="/<%= user.username %>/<%= post.post_id %>/update?_method=PUT" method="POST">
        <div>
            <label for="title">Title</label>
            <input type="text" id="title" name="title" value="<%= post.title %>" required />
        </div>
        <div>
            <label for="topic">Topic</label>
            <input type="text" id="topic" name="topic" value="<%= post.topic %>" required />
        </div>
        <div>
            <label for="content">Content</label>
            <input type="text" id="content" name="content" value="<%= post.content %>" required />
        </div>
        <button type="submit">Update Post</button>
    </form>
</div>

<%- include('../partials/footer') %>