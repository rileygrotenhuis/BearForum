<%- include('../partials/header') %>
<%- include('../partials/navbar', { user: currUser }) %>

<div class="container w-50 justify-center">
    <h1 class="mt-3"><%= user.first_name %> <%= user.last_name %></h1>
    <h3><%= user.user_email %></h3>
    <p>Location: <%= user.location_city %>, <%= user.location_state %></p>
    <p>Bio: <%= user.biography %></p>

    <% if (currUser) { %>
        <div class="d-flex">
            <a class="btn btn-sm btn-primary" href="/<%= currUser.username %>/update">Update</a>
            <form action="/<%= currUser.username %>/delete?_method=DELETE" method="POST">
                <button class="btn btn-sm btn-danger" type="submit">Delete</button>
            </form>
        </div>
    <% } %>

    <% for (var i = 0; i < posts.length; i++) { %>
        <%- include('../partials/post-feed', { 
            user: currUser,
            post: posts[i]
        }) %>
    <% } %>
</div>

<%- include('../partials/footer') %>