<%- include('partials/header') %>
<%- include('partials/navbar', { user: user }) %>


<div class="container w-50 justify-center">
    <h1>Login</h1>

    <% if (messages.error) { %>
        <%= messages.error %>
    <% } %>

    <form action="/login" method="POST">
        <div class="form-group">
            <label for="username">Username</label>
            <input class="form-control" type="text" id="username" name="username" required>
        </div>
        <div class="form-group">
            <label for="username">Password</label>
            <input class="form-control" type="password" id="password" name="password" required>
        </div>
        <div class="d-flex mt-3">
            <button class="btn btn-md" style="background-color: #5e0009; color: white; margin-right: 5px;" type="submit">Login</button>
            <a class="btn btn-md btn-primary" style="background-color: #5e0009; color: white;" href="/register">Register</a>
        </div>
    </form>
</div>

<%- include('partials/footer') %>
